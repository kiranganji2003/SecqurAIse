<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="30dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/andada"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/button_background"
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/andada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="ECQUR"
            android:textColor="@color/button_background"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/andada"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/red_color"
            android:text="AI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/andada"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/button_background"
            android:text="SE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/date_and_time"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Capture Count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/capture_count"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Frequency (min)"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <EditText
            android:maxLength="4"
            android:background="@color/black"
            android:inputType="number"
            android:id="@+id/frequency"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Connectivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/connectivity"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="ON"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Battery Charging"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/battery_charging"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="ON"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Battery Charge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/battery_charg"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="56%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:paddingRight="20dp"
            android:id="@+id/location"
            android:textSize="17sp"
            android:textColor="@color/green"
            android:textAlignment="textEnd"
            android:text="31.967095, 78.145844"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/refresh"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:text="Manual Data Refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</LinearLayout>